{
"env": {
		"browser": true,
		"es2021": true,
		"commonjs":true,
        "node":true
	},
	 "extends": ["eslint:recommended"],
	// 	"plugin:react/recommended"
	 
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
//		 "indent": ["error",
       //     "tab"
       // ],
		 "no-unused-vars": ["error" ],
    
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		]
	}
}